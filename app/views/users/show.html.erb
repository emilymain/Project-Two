<h1><%= @user.name %> </h1>

<%= image_tag @user.image.url(:large), class:'img-circle' if @user.image? %>
<h3><%= @user.name %>'s Skills:</h3>
<%@user.skills.each do |skill| %>
<%= skill.name %><br>
<%end %>
<h3><%= @user.name %>'s Projects:</h3>
<% @user.projects.each do |project| %>
<ul>
  <%= link_to project.title, project_path(project) %>
</ul>
<%= project.content %><br>
<% end %>
<% if @user == current_user%>
  <%= link_to 'Edit Account', edit_user_path %>
<% end %>
<% if @user == current_user %>
  <%= link_to 'Delete Account', @user, method: :delete, data: {confirm: 'Are you sure?'} %>
<% end %>
